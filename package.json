{
  "name": "snapstream-platform",
  "version": "1.0.0",
  "description": "A modern, full-stack photo sharing and social media platform",
  "type": "module",
  "main": "api/server.js",
  "scripts": {
    "start": "node api/server.js",
    "dev": "nodemon api/server.js",
    "client": "cd frontend/client && npm run dev",
    "server": "nodemon api/server.js",
    "dev:full": "concurrently \"npm run server\" \"npm run client\"",
    "build": "cd frontend/client && npm run build",
    "vercel-build": "cd frontend/client && npm install --include=dev && npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "photo-sharing",
    "social-media",
    "full-stack",
    "nodejs",
    "express",
    "mongodb",
    "react"
  ],
  "author": "Ehsan Shahid",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.0.3"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}
